<%= modal(title: "Edit \"#{@task.title.strip}\"") do %>
  <%= form_with model: @task, data: { turbo_frame: dom_id(@task.lane) } do |form| %>
    <%= form.label(:title) %>
    <%= form.text_field(:title, class: "input-field !m-0") %>
    <%= form.label(:description, class: "pt-2") %>
    <%= form.text_field(:description, class: "input-field !m-0") %>
    <%= form.submit("Update!", class: "button-filled float-right bg-violet-700 mt-2") %>
  <% end %>
<% end %>
