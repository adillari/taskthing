<%# locals: (lane:) %>

<%= tag.div(id: dom_id(lane, :new_task_form), class: new_task_classes, hidden: true) do %>
  <%= form_with(model: lane.tasks.new) do |form| %>
    <%= form.hidden_field(:board_id, value: lane.board.id) %>
    <%= form.hidden_field(:lane_id, value: lane.id) %>
    <%= form.text_field(:title, id: dom_id(lane, :task_title), required: true, placeholder: t("placeholders.task_title"), autocomplete: "off", class: "mb-1 task-input-field") %>
    <%= tag.div(class: "flex") do %>
      <%= form.text_area(:description, id: dom_id(lane, :task_description), rows: 2, placeholder: t("placeholders.task_description"), autocomplete: "off", class: "resize-none task-input-field") %>
      <%= form.submit("save", class: "material-symbols-outlined cursor-pointer text-violet-700 mt-auto", data: { action: "lane#toggleNewTaskForm" }) %>
    <% end %>
  <% end %>
<% end %>
