<div class="flex">
  <section class="flex flex-col gap-2 max-w-96 mx-auto grow">
    <%= board_invite_button %>
    <%= board_edit_button %>
    <div class="bg-zinc-900 rounded-lg p-2 shadow-2xl list-none space-y-2" data-controller="sortable">
      <header class="text-xl font-bold">
        <%= t("lanes") %>
      </header>
      <%= form_with(model: @board, class: "flex flex-col") do |form| %>
        <%= form.fields_for(:lanes) do |lane_form| %>
          <div class="lane">
            <%= lane_form.label :name %>
            <%= lane_form.text_field :name, class: "input-field" %>
            <%= lane_form.check_box :_destroy, class: "shadow rounded-md border border-gray-400 outline-none bg-slate-900" %>
            <%= lane_form.label :_destroy, "Remove Lane (also deletes it's tasks!)" %>
          </div>
        <% end %>
        <%= form.submit("Update Lanes", class: "button-filled bg-violet-700 mt-3 mx-auto") %>
      <% end %>
    </div>
    <div class="bg-zinc-900 rounded-lg p-2 shadow-2xl">
      <header class="text-xl font-bold mb-2">
        <%= t("members") %>
      </header>
      <% @board.users.each do |user| %>
        <li class="ml-4">
          <%= user.email_address %>
        </li>
      <% end %>
    </div>
    <%= board_delete_button %>
  </section>
</div>
