<div class="flex">
  <section class="flex flex-col gap-2 max-w-96 mx-auto grow">
    <%= board_invite_button %>
    <%= board_edit_button %>
    <div class="bg-zinc-900 rounded-lg p-2 shadow-2xl list-none space-y-2" data-controller="sortable">
      <header class="text-xl font-bold">
        <%= t("lanes") %>
      </header>
      <%= form_with(model: @board) do |form| %>
        <% @board.lanes.each do |lane| %>
          <li class="select-none button-outlined flex justify-center">
            <%= lane.name %>
          </li>
        <% end %>
      <% end %>
    </div>
    <div class="bg-zinc-900 rounded-lg p-2 shadow-2xl">
      <header class="text-xl font-bold mb-2">
        <%= t("members") %>
      </header>
      <% @board.users.each do |user| %>
        <li class="ml-4">
          <%= user.email_address %>
        </li>
      <% end %>
    </div>
    <%= board_delete_button %>
  </section>
</div>
