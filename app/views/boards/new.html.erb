<%= render ModalComponent.new(title: "New Board") do %>
  <%= form_with model: @board do |form| %>
    <div class="my-5">
      <%= form.text_field(:title, required: true, autofocus: true, placeholder: "e.g. Movies To Watch", class: "input-field") %>
    </div>
    <div class="inline">
      <%= form.submit("Create", class: "button-filled float-right bg-violet-700", data: { turbo_frame: :_top }) %>
    </div>
  <% end %>
<% end %>
