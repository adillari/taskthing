<%= modal(title: t("modals.titles.new_board")) do %>
  <%= form_with model: @board do |form| %>
    <div class="my-5">
      <%= form.text_field(:title, required: true, autofocus: true, placeholder: t("placeholders.board_title"), class: "input-field") %>
    </div>
    <div class="inline">
      <%= form.submit(t("modals.confirms.create!"), class: "button-filled float-right bg-violet-700", data: { turbo_frame: :_top }) %>
    </div>
  <% end %>
<% end %>
