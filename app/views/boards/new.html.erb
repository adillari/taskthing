<%= render ModalComponent.new(title: "New Board") do %>
  <%= form_with model: @board do |form| %>
    <div class="my-5">
      <%= form.text_field :title, required: true, autofocus: true, placeholder: "e.g. Movies To Watch", class: "shadow rounded-md outline-none px-3 py-2 mt-2 w-full bg-slate-900" %>
    </div>
    <div class="inline">
      <%= form.submit "Create", class: "rounded-lg py-3 px-5 bg-violet-600 text-white inline-block font-medium cursor-pointer float-right" %>
    </div>
  <% end %>
<% end %>
