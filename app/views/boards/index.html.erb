<% if @boards.any? %>
  <ul class="flex flex-col gap-2 mb-20" data-controller="sortable">
    <%= render(BoardPreviewComponent.with_collection(@boards)) %>
  </ul>
<% else %>
  <div class="content-center-full opacity-30">
    Add a board to start
  </div>
<% end %>
<%= link_to "+", new_board_path, class: "button-filled fixed sm:absolute bottom-0 right-0 m-4 shadow", data: { turbo_frame: :modal } %>
