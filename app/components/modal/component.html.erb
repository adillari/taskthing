<turbo-frame id="modal">
  <div class="bg-black bg-opacity-50 backdrop-blur fixed top-0 left-0 w-full h-full z-10" data-application-target="modal" data-action="click->application#removeModal">
    <div class="mx-auto max-w-96 bg-zinc-900 rounded-lg p-4 shadow-xl shadow-sm fixed inset-x-2 top-1/3 z-20" data-action="click->application#stopPropagation">
      <div class="flex font-semibold mb-4">
        <span class="overflow-hidden">
          <%= @title %>
        </span>
        <button class="material-symbols-outlined ml-auto cursor-pointer" data-action="application#removeModal">
          close
        </button>
      </div>
      <%= content %>
    </div>
  </div>
</turbo-frame>
