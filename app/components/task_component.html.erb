<li class="task first-of-type:!mt-0 bg-zinc-950 border border-violet-700 rounded-lg overflow-hidden shadow-lg flex cursor-grab select-none">
  <%= form_with model: @task do |form| %>
    <%= form.hidden_field :lane_id, id: nil %>
    <%= form.hidden_field :position, id: nil %>
  <% end %>
  <aside class="self-stretch bg-violet-700 place-content-center material-symbols-outlined w-6 handle mobile-handle">
    drag_indicator
  </aside>
  <article class="m-2 flex flex-col w-full handle">
    <header class="font-medium text-center place-content-center grow">
      <%= @task.title %>
    </header>
    <% if @task.description.present? %>
      <p class="h-full mt-1.5 grow">
        <%= @task.description %>
      </p>
    <% end %>
  </article>
  <aside class="flex flex-col gap-1 my-2 mr-1">
    <%= link_to "edit", edit_task_path(@task), class: "material-symbols-outlined text-yellow-500 my-auto", data: { turbo_frame: :modal } %>
    <%= link_to "delete", delete_confirmation_task_path(@task), class: "material-symbols-outlined text-red-500 my-auto", data: { turbo_frame: :modal } %>
  </aside>
</li>
